{
  "name": "my-bot",
  "private": true,
  "version": "1.0.0",
  "description": "A virtual assistant that helps you get your time back.",
  "license": "Apache 2.0",
  "repository": "https://github.com/palmerabollo/mybot",
  "author": "Guido Garc√≠a <palmerabollo@gmail.com> (https://twitter.com/palmerabollo)",
  "keywords": [
    "assistant",
    "bot"
  ],
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rm -rf ./lib",
    "compile": "tsc",
    "lint": "tslint './src/**/*.ts'",
    "prepublish": "npm run build",
    "prestart": "npm install",
    "postinstall": "npm run build",
    "watch": "npm-run-all --parallel watch:*",
    "watch-console": "BOT_CONSOLE=1 npm run watch",
    "watch:ts": "tsc -w",
    "watch:js": "nodemon --delay 2 --watch lib -e js --exec 'node -r dotenv/config lib/index.js'",
    "start": "node -r dotenv/config lib/index.js",
    "debug": "npm start -- -c --debug-brk"
  },
  "dependencies": {
    "botbuilder": "^3.8.1",
    "botbuilder-aws-lambda": "^1.0.2",
    "botbuilder-cognitiveservices": "^1.1.0",
    "dotenv": "^4.0.0",
    "html-entities": "^1.2.1",
    "lodash": "^4.17.4",
    "logops": "^2.0.0",
    "request": "^2.81.0",
    "restify": "^4.3.0"
  },
  "devDependencies": {
    "@types/convict": "^0.6.33",
    "@types/dotenv": "^4.0.0",
    "@types/html-entities": "^1.2.15",
    "@types/lodash": "^4.14.64",
    "@types/node": "^7.0.18",
    "@types/request": "^0.0.43",
    "@types/restify": "^4.3.1",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2"
  },
  "engines": {
    "node": ">=6"
  }
}
